<tal:block define="ds options/datastructure;
                   channel ds/channel;
                   max_items ds/max_items;
                   max_words ds/max_words;
                   display_description ds/display_description;
                   max_words python: display_description and int(max_words) or 0;
                   rssitems python: here.getRSSItems(channel, int(max_items), int(max_words));
                   link_string ds/link_string"
           condition="rssitems">
  <tal:block repeat="item rssitems">
    <tal:block define="item_url item/url">
      <h2><a i18n:translate=""
           tal:attributes="href item_url" 
           tal:content="item/title">Item title</a></h2>
      <span tal:condition="python: int(display_description)"
       tal:content="item/description" />
      <span tal:condition="link_string">
       <a href="" tal:attributes="href item_url"
        tal:content="structure link_string" />
      </span>
    </tal:block>
  </tal:block>
</tal:block>
