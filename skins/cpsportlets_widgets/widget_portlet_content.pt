<tal:block define="ds options/datastructure;
                   context nocall:options/context_obj|here;
                   search_type ds/search_type;
                   sort_on ds/sort_on;
                   sort_reverse ds/sort_reverse;
                   max_items ds/max_items;
                   folder_path ds/folder_path;
                   contentitems python: here.getContentItems(obj=context, search_type=search_type, sort_on=sort_on, sort_reverse=sort_reverse, max_items=max_items, folder_path=folder_path);
">
    <ul>
      <li tal:repeat="item contentitems"><a i18n:translate=""
       tal:attributes="href item/getURL" 
       tal:content="item/Title">Item title</a></li>
    </ul>
</tal:block>
