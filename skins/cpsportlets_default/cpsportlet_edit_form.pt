   </metal:block>
  </metal:block>

  <metal:block fill-slot="header">
    <h1>
      <img tal:replace="structure python:here.getImgTag('/'+here.getIcon(), base_url='')" />
      <tal:block i18n:translate="_Edit_">Edit</tal:block> 
      <tal:block replace="here/title_or_id" />
    </h1>
  </metal:block>

  <metal:block fill-slot="main">
    <div tal:replace="structure rendered_main" />
    <form action="" method="post">
      <input type="button" i18n:attributes="value"
       tal:attributes="value string:button_back"
       onclick="javascript:history.back()" />
    </form>
  </metal:block>

</metal:block>
</metal:block>
</tal:block>
