<tal:block define="global boxedit python: 1;
                   res python:here.editCPSPortlet(REQUEST=request);
                   rendered_main python: res[0];
                   portal_status_message python: res[1];
                   error python: res[2];
  ">
<metal:block define-macro="edit_form">
  <metal:block use-macro="here/main_template/macros/master">
  <metal:block fill-slot="css_slot">
    <metal:block define-macro="widgets_javascript">

    <script type="text/javascript">
    <!--
     function popup_rte(input_id, label_edit) {
       var args, value
       value = document.getElementById(input_id).value;
       args='?input_id='+input_id+'&label_edit='+escape(label_edit);
       popup = window.open('popup_rte_form'+args, input_id, 'toolbar=0, scrollbars=0, location=0, statusbar=0, menubar=0, resizable=0, dependent=1, width=640, height=480')
       if(!popup.opener)
         popup.opener = window;
       return false;
   }
   //-->
   </script>
   </metal:block>
  </metal:block>

  <metal:block fill-slot="header">
    <h1>
      <img tal:replace="structure python:here.getImgTag('/'+here.getIcon(), base_url='')" />
      <tal:block i18n:translate="_Edit_">Edit</tal:block> 
      "<tal:block replace="here/title_or_id" />"
    </h1>
  </metal:block>

  <metal:block fill-slot="main"
     tal:define="portlet_folder here/getLocalFolder|nothing;
                 portlet_id here/getId">
    <form action="" method="post"
     tal:condition="portlet_folder"
     tal:attributes="action string:${portlet_folder/absolute_url}/portlet_manage_form">
      <input type="hidden" name="selected_portlet" 
       tal:attributes="value portlet_id" />
      <input type="submit" i18n:attributes="value"
       tal:attributes="value string:button_portlet_management">
    </form>

    <div tal:condition="error"
         tal:replace="structure rendered_main" />
    <div tal:condition="not:error"
         tal:replace="structure python: here.render(layout_mode='edit', context_obj=here)" />
  </metal:block>

</metal:block>
</metal:block>
</tal:block>
